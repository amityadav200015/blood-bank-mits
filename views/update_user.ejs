<!--Main Site-->
<main id="site-main">
    <div class="container">
       <div class="box-nav d-flex-justify-between">
        <div class="filter">
            <a href="/"><i class="fas fa-angle-double-left"></i>All Donors</a>
        </div>
       </div> 
       <div class="form-title text-center">
           <h2 class="text-dark">Update Donor's Data</h2>
           <span class="text-light">Use the below form to update an account</span>
       </div>

       <!--Form Handling-->
<form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <lable for="name" class="text-light">Name</lable>
            <input type="hidden" name="id" value="<%= user._id%>">
            <input type="text" name="name" value="<%= user.name%>" placeholder="Enter Your Name">
        </div>
        <div class="form-group">
            <lable for="Email" class="text-light">Email</lable>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>

        

        <div class="form-group">
            <lable for="gender" class="radio-label">Gender</lable>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male"<%= user.gender == 'Male' ? 'checked' : ''%>>
                <label for="radio-2" class="radio-label">Male</label> 
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" <%= user.gender == 'Female'? 'checked' : ''%>>
                <label for="radio-3" class="radio-label">Female</label> 
            </div>
        </div>

        <div class="form-group">
            <lable for="city" class="text-light">City</lable>
            <input type="hidden" name="id" value="<%= user._id%>">
            <input type="text" name="city" value="<%= user.city%>" placeholder="City Name">
        </div>

        <div class="form-group">
            <lable for="gender" class="radio-label">Status</lable>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active'? 'checked' : ''%>>
                <label for="radio-4" class="radio-label">Active</label> 
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive'? 'checked' : ''%>>
                <label for="radio-5" class="radio-label">Inactive</label> 
            </div>
        </div>

        <div class="form-group">
            <label for="group" class="radio-label">Select your blood group</label><br>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="group" value="A+" <%= user.group == 'A+' ? 'checked' : ''%>>
                <label for="radio-6" class="radio-label">A+&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-7" name="group" value="A-" <%= user.group == 'A-' ? 'checked' : ''%>>
                <label for="radio-7" class="radio-label">A-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-8" name="group" value="B+" <%= user.group == 'B+' ? 'checked' : ''%>>
                <label for="radio-8" class="radio-label">B+&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-9" name="group" value="B-" <%= user.group == 'B-' ? 'checked' : ''%>>
                <label for="radio-9" class="radio-label">B-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-10" name="group" value="O+" <%= user.group == 'O+' ? 'checked' : ''%>>
                <label for="radio-10" class="radio-label">O+&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-11" name="group" value="O-" <%= user.group == 'O-' ? 'checked' : ''%>>
                <label for="radio-11" class="radio-label">O-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-12" name="group" value="AB+" <%= user.group == 'AB+' ? 'checked' : ''%>>
                <label for="radio-12" class="radio-label">AB+&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="radio" id="radio-13" name="group" value="AB-" <%= user.group == 'AB-' ? 'checked' : ''%>>
                <label for="radio-13" class="radio-label">AB-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>

            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!--/Main site-->

